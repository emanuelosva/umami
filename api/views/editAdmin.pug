extends layout.pug

block content
  block content
    if error
      .container.text-center.mt-5.mb-5
        .alert.alert-danger(role="alert")
          p= error
    else
      .container.text-center.mt-5.mb-5
        .card.mb-5
          h5.card-header.info-color.white-text.text-center.py-4
            strong Editar Administrador
          .card-body
            form(action=`/admin/edit/${admin._id}` method="POST")
              .form-group.text-left
                label(for="user") 
                  span.badge.bagde-pill.badge-primary Username
                input.mb-2(type="text" class="form-control" id="user" name="user" editable value=admin.user)
                
                label(for="password") 
                  span.badge.bagde-pill.badge-primary Password
                input.mb-2(type="password" class="form-control" id="password" name="password" editable)

                button.btn.btn-primary.w-100.mt-2(type="submit") 
                  strong Crear!
                
                .text-right.mt-2.mr-2
                  a(href="/admin") 
                    strong Vulve al Panel